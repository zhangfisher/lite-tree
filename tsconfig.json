{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "compilerOptions": {
    "declaration": true,
    "composite": true,
    "target": "ES2021",
    "lib": ["ES2021", "DOM"],
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "rootDirs": ["src"],
  },
  "include": [
    "env.d.ts",  
    "src/**/*.ts", 
    "src/**/*/*.ts", 
    "src/**/*.vue",
    "src/**/*/*.vue"


  ],
  "exclude": ["src/**/__tests__/*"],
}
